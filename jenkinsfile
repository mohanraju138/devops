pipeline { 
    environment { 
        registry = "mohanraju138/python-flask-app-test" 
        registryCredential = 'dockerhub_id' 
        dockerImage = '' 
    }
    agent any 
    stages { 
        stage('Cloning our Git') { 
            steps { 
                git branch:'main', url: 'https://github.com/mohanraju138/devops.git' 
            }
        } 
        stage('Building our image') { 
            steps { 
                script { 
                    dockerImage = docker.build registry + ":$BUILD_NUMBER" 
                }
            }
        } 
        stage('Deploy our image') { 
            steps { 
                script { 
                    docker.withRegistry( '', registryCredential ) { 
                        dockerImage.push() 
                    }
                } 
            }
        } 
        stage('Cleaning up') { 
            steps { 
                sh "docker rmi $registry:$BUILD_NUMBER" 
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                echo 'Deploy the App for k8s'
                sh "sed -i 's/TAG/$BUILD_NUMBER/g' python-flask-app-deployment.yml"
                sh "kubectl apply -f python-flask-deployment.yml --image=$registry:$BUILD_NUMBER"
            }
        } 
    }
}